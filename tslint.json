{
  "extends": [
    "tslint:recommended",
    "tslint-eslint-rules"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**",
      "lib/**"
    ]
  },
  "rules": {
    "semicolon": true,
    "indent": [true, "spaces", 2],
    "quotemark": [true, "single", "avoid-escape", "avoid-template"]
  }
}
