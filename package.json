{
  "name": "koa-jsonapi-headers",
  "version": "2.0.1",
  "description": "KoaJS Validate JSON-API Request Headers Middleware",
  "repository": {
    "type": "git",
    "url": "https://github.com/dhkatz/koa-jsonapi-headers.git"
  },
  "main": "./lib/index.js",
  "types": "./typings/index.d.ts",
  "scripts": {
    "prepublishOnly": "gulp build",
    "build": "npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "tsc",
    "lint": "eslint src/**/* && tsc --noEmit",
    "test": "jest --ci --verbose --forceExit --detectOpenHandles",
    "test:coverage": "jest --coverage --ci",
    "coverage": "./node_modules/.bin/jest --ci --verbose --forceExit --coverage --detectOpenHandles && cat ./coverage/lcov.info | ./node_modules/.bin/coveralls"
  },
  "jest": {
    "collectCoverage": true,
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.{ts,js}"
    ]
  },
  "keywords": [
    "koa",
    "koajs",
    "jsonapi"
  ],
  "author": {
    "name": "David Katz",
    "email": "dhkatz.16@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/koa": "^2.0.48",
    "@types/supertest": "^2.0.7",
    "coveralls": "^3.0.3",
    "jest": "^24.7.1",
    "koa": "^2.7.0",
    "merge2": "^1.2.3",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.15.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.4.1"
  }
}
